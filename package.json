{
  "name": "react-production-starter",
  "version": "0.2.0",
  "description": "Isomorphic React Starter with Redux, React Router, Redial, Aphrodite, Express, Webpack.",
  "scripts": {
    "test": "cross-env NODE_ENV=test ./node_modules/mocha/bin/mocha --compilers js:babel-core/register --recursive",
    "test:watch": "npm test -- --watch",
    "coverage": "nyc npm test",
    "start": "cross-env NODE_ENV=development node -r \"babel-register\" ./server",
    "start:prod": "cross-env NODE_ENV=production node ./build/server.js",
    "heroku-postbuild": "npm run build",
    "build": "webpack -p --config ./tools/webpack.client.prod.js && webpack -p --config ./tools/webpack.server.prod.js",
    "clean": "rm -rf build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaredpalmer/react-production-starter.git"
  },
  "keywords": [],
  "author": "jaredpalmer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jaredpalmer/react-production-starter/issues"
  },
  "homepage": "https://github.com/jaredpalmer/react-production-starter#readme",
  "dependencies": {
    "aphrodite": "^1.1.0",
    "assets-webpack-plugin": "^3.3.0",
    "axios": "^0.15.0",
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "^6.9.0",
    "body-parser": "^1.14.2",
    "compression": "^1.6.2",
    "cross-env": "2.0.1",
    "eslint-config-standard": "^6.0.0",
    "express": "^4.13.4",
    "helmet": "^2.0.0",
    "history": "^4.0.0",
    "hpp": "^0.2.0",
    "json-loader": "^0.5.4",
    "morgan": "^1.6.1",
    "opn": "^4.0.2",
    "chalk": "^1.1.3",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.0",
    "react-router": "^2.0.0",
    "redial": "^0.4.1",
    "redux": "^3.3.1",
    "redux-thunk": "^2.1.0",
    "source-map-support": "^0.4.0",
    "standard-loader": "^5.0.0",
    "standard": "^8.0.0",
    "throng": "^4.0.0",
    "webpack": "^1.13.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^2.0.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "mocha": "^3.0.2",
    "nyc": "^10.0.0"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "engines": {
    "node": "6.2.2"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "**/migrations/**",
      "**/tools/**",
      "**/test/**"
    ]
  }
}
