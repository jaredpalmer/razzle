{
  "private": true,
  "bugs": "https://github.com/jaredpalmer/razzle/issues",
  "homepage": "https://github.com/jaredpalmer/razzle#readme",
  "workspaces": ["packages/*", "examples/*"],
  "devDependencies": {
    "eslint": "^4.18.0",
    "husky": "^0.14.3",
    "jest": "22.3.0",
    "lerna": "^2.9.0",
    "lerna-changelog": "^0.7.0",
    "lint-staged": "^6.1.1",
    "prettier": "^1.10.2",
    "ps-tree": "1.1.0",
    "semver": "5.5.0",
    "shelljs": "^0.8.1"
  },
  "scripts": {
    "e2e": "jest --verbose --no-cache ",
    "preinstall": "if which lerna &> /dev/null; then lerna clean --yes; fi",
    "changelog": "lerna-changelog",
    "format":
      "prettier --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": ["prettier --write", "git add"]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/coverage/",
      "<rootDir>/node_modules/",
      "<rootDir>/examples/",
      "<rootDir>/packages/create-razzle-app/templates/",
      "scripts/test.js"
    ],
    "collectCoverageFrom": ["**/*.js"],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/packages/*/node_modules/",
      "<rootDir>/examples/",
      "<rootDir>/coverage/"
    ]
  }
}
